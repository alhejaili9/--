    <div class="admin-panel">
        <h2 class="section-title">نظام الشاعري لإصدار بطاقات الجلوس</h2>
        
        <div class="upload-section">
            <div class="form-group">
                <label>1. شعار الوزارة:</label>
                <input type="file" accept="image/*" onchange="previewImg(this, 'p1')">
            </div>
            <div class="form-group">
                <label>2. شعار المدرسة:</label>
                <input type="file" accept="image/*" onchange="previewImg(this, 'p2')">
            </div>
        </div>

        <div class="grid-inputs">
            <div class="form-group">
                <label>الصف:</label>
                <select id="grade">
                    <option>الصف الأول المتوسط</option>
                    <option>الصف الثاني المتوسط</option>
                    <option>الصف الثالث المتوسط</option>
                </select>
            </div>
            <div class="form-group">
                <label>الشعبة:</label>
                <select id="section">
                    <option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option>
                </select>
            </div>
            <div class="form-group">
                <label>رقم اللجنة:</label>
                <select id="committee">
                    </select>
            </div>
            <div class="form-group">
                <label>بداية رقم الجلوس:</label>
                <input type="number" id="startNo" value="1001">
            </div>
            <textarea id="allNames" placeholder="أدخل أسماء الطلاب هنا (كل اسم في سطر مستقل)"></textarea>
        </div>

        <button class="btn-generate" onclick="generate()">توليد البطاقات والطباعة</button>
        <div class="developer-credit">إعداد المعلم: عبدالرحمن سعد الحجيلي</div>
    </div>

    <div id="printArea"></div>

    <script>
        let img1 = "", img2 = "";

        // تحويل الأرقام إلى عربية (هندية)
        function toArabicDigits(num) {
            const id = ['٠','١','٢','٣','٤','٥','٦','٧','٨','٩'];
            return num.toString().replace(/[0-9]/g, function(w){
                return id[+w];
            });
        }

        // تعبئة اللجان 1-25
        const cSel = document.getElementById('committee');
        for(let i=1; i<=25; i++) {
            let o = document.createElement('option');
            o.value = i; o.text = toArabicDigits(i); 
            cSel.appendChild(o);
        }

        function previewImg(input, target) {
            const reader = new FileReader();
            reader.onload = e => {
                if(target === 'p1') img1 = e.target.result;
                else img2 = e.target.result;
            }
            if(input.files[0]) reader.readAsDataURL(input.files[0]);
        }

        function generate() {
            const namesText = document.getElementById('allNames').value.trim();
            if(!namesText) { alert("يرجى إدخال أسماء الطلاب"); return; }
            if(!img1 || !img2) { alert("يرجى رفع الشعارات المطلوبة أولاً"); return; }

            const names = namesText.split('\n');
            const grade = document.getElementById('grade').value;
            const section = toArabicDigits(document.getElementById('section').value);
            const comm = toArabicDigits(document.getElementById('committee').value);
            let currentNo = parseInt(document.getElementById('startNo').value);

            const area = document.getElementById('printArea');
            area.innerHTML = ""; 

            names.forEach(name => {
                if(name.trim() !== "") {
                    area.innerHTML += `
                        <div class="card">
                            <div class="header">
                                <img src="${img1}">
                                <div class="header-text">
                                    المملكة العربية السعودية<br>
                                    إدارة التعليم بالمدينة المنورة<br>
                                    مدارس العقيق الأهلية (بنين)<br>
                                    المرحلة المتوسطة
                                </div>
                                <img src="${img2}">
                            </div>
                            <div class="content">
                                <div class="info-row"><span class="label">اسم الطالب:</span><span class="value">${name.trim()}</span></div>
                                <div class="info-row"><span class="label">الصف:</span><span class="value">${grade}</span></div>
                                <div class="info-row"><span class="label">الشعبة:</span><span class="value">${section}</span></div>
                                <div class="info-row"><span class="label">رقم اللجنة:</span><span class="value">${comm}</span></div>
                                <div class="seat-box">
                                    <span class="seat-label">رقم الجلوس</span>
                                    <span class="seat-val">${toArabicDigits(currentNo)}</span>
                                </div>
                            </div>
                        </div>
                    `;
                    currentNo++;
                }
            });

            setTimeout(() => { window.print(); }, 500);
        }
    </script>
</body>
